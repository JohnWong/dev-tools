#!/usr/bin/env python
# -*- coding: utf8 -*-

from urllib import quote
import sys
import getopt


def usage():
    print("Usage: %s string" % sys.argv[0])


if __name__ == '__main__':
    opts, args = getopt.getopt(sys.argv[1:], "h", "help")
    for opt, arg in opts:
        if opt in ("-h", "--help"):
            usage()
            sys.exit(1)
            pass
        pass
    if len(args) != 1 or len(opts) > 0:
        usage()
        sys.exit(1)
        pass
    print(quote(args[0]))
